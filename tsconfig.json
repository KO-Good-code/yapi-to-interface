{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "common/*": ["common/*"]
    },
    "module": "esNext",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"]
  },
  "include": ["./"],
  "exclude": ["node_modules"],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  }
}
